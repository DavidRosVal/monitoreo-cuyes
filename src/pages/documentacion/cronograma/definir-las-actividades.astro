---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';

const modeloCanvasUrl = "/modelo-canvas.pdf"
const actaDeConstitucionUrl = "/acta-de-constitucion.pdf"
const diagramaFlujoUrl = "/diagrama-de-flujo-cuidado.jpg"
const cuidador1 = "/cuidador1.jpg"
const cuidador2 = "/cuidador2.jpg"
const edt = "/EDT.pdf"
const diccionarioEdt = "/diccionario-EDT.pdf"
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.seccion {
        margin-bottom: 3em;
      }
      h3, h2 {
        text-align: center;
        margin-bottom: 0.5em;
        margin-top: 0.5em;
      }
      h3 {
        margin-top: 1em;
      }
      h1 {
        text-align: center;
        margin-bottom: 1em;
      }
      .personal-container {
        display: flex;
        justify-content: space-between;
        margin-top: 2em;
      }
      .personal {
        width: 500px;
        text-align: center;
        padding: 0 1em 0 1em;
      }
		</style>
	</head>
	<body>
		<Header />
		<main>
      <h1>Definir las Actividades</h1>
      <div class="seccion">
        <hr>
        <h2>Entradas</h2>
        <hr>
        <ol>
          <li>
            <a href="/documentacion/factores-ambientales">Factores ambientales de la Empresa</a>
          </li>
          <li>
            <a href="/documentacion/activos-de-los-procesos">Activos de los Procesos de la Organización</a>
          </li>
        </ol>
        <hr>
        <h2>Herramientas</h2>
        <hr>
        <h3>Descomposición</h3>
        <h4>EDT</h4>
        <iframe src={"/EDT.pdf"} width="100%" height="600px"></iframe>
        
        <hr>
        <h2>Salidas</h2>
        <hr>
        <h3>Lista de actividades</h3>
        <iframe src={"/cuadro-de-actividades.pdf"} width="100%" height="600px"></iframe>
        
        <h3>Atributos de actividades</h3>
        <iframe src={"/atributos-de-las-actividades.pdf"} width="100%" height="600px"></iframe>
        
      </div>
      
		</main>
		<Footer />
	</body>
</html>
